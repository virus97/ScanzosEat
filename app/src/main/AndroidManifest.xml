<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.simonescanzani.scanzoseat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.LoginActivity"
            android:label="@string/login_activity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:label="@string/register_activity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.activities.CheckoutActivity"
            android:label="@string/checkout_activity"/>
        <activity
            android:name=".ui.activities.ShopActivity"
            android:label="@string/shop_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activities.AccountActivity"
            android:label="Account"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>